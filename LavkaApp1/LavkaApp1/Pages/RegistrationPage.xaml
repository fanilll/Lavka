<Page x:Class="LavkaApp1.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LavkaApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Регистрация" FontSize="25" FontWeight="Bold"></TextBlock>

            <TextBlock Text="ФИО" FontSize="16" Margin="0 10 0 0"></TextBlock>
            <TextBox x:Name="FullNameTB" Width="200" Height="30" Margin="0 5 0 0"></TextBox>

            <TextBlock Text="Логин" FontSize="16" Margin="0 10 0 0"></TextBlock>
            <TextBox x:Name="LoginTB" Width="200" Height="30" Margin="0 5 0 0"></TextBox>

            <TextBlock Text="Пароль" FontSize="16" Margin="0 10 0 0"></TextBlock>
            <PasswordBox x:Name="PasswordPB" Width="200" Height="30" Margin="0 5 0 0"></PasswordBox>

            <Button x:Name="RegistrBT" Width="200" Height="30" Content="Зарегистрироваться" Margin="0 10 0 0" Click="RegistrBT_Click"></Button>

            <Button x:Name="ExitBT" Width="150" Height="30" Content="Назад" Margin="0 10 0 0" Click="ExitBT_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
