<Page x:Class="LavkaApp1.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LavkaApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Логин" FontSize="20"></TextBlock>
            <TextBox x:Name="LoginTB" Width="200" Height="30" Margin="0 10 0 0"></TextBox>

            <TextBlock Text="Пароль" FontSize="20"></TextBlock>
            <PasswordBox x:Name="PasswordPB" Width="200" Height="30" Margin="0 10 0 0"></PasswordBox>

            <Button x:Name="AuthBT" Content="Войти" Width="200" Height="20" Margin="0 20 0 0" Click="AuthBT_Click"></Button>
            <Button x:Name="RegistrBT" Content="Зарегистрироваться" Width="200" Height="20" Margin="0 20 0 0" Click="RegistrBT_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
